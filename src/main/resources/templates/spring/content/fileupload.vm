        <p><span class="cbi-bold">import</span><span>org.springframework.web.multipart.MultipartFile;</span></p></br>
        <p><span class="cbi-annotation">@RequestMapping</span>(value="upload", method=RequestMethod.POST)</p>
        <p><span class="cbi-bold">public</span> String <span class="cbi-method">uploadFiles</span>(<span class="cbi-annotation">@RequestParam</span>("file1") MultipartFile file1,</p>
        <p><span class="cbi-indent-x8 cbi-annotation">@RequestParam</span><span>("file2") MultipartFile file2) <span class="cbi-bold">throws</span> IOException {</span></p></br>
        <p><span class="cbi-indent-x4">if (!file1.isEmpty()) {</span></p>
        <p><span class="cbi-indent-x4">file1.<span class="cbi-bold">transferTo</span>(new File("C:＼＼storage＼＼"+file1.getOriginalFilename()));</span></p>
        <p><span class="cbi-indent-x4">}</span></p>
        <p><span class="cbi-indent-x4">if (!file2.isEmpty()) {</span></p>
        <p><span class="cbi-indent-x4">file2.<span class="cbi-bold">transferTo</span>(new File("C:＼＼storage＼＼"+file2.getOriginalFilename()));</span></p>
        <p><span class="cbi-indent-x4">}</span></p>
        <p><span class="cbi-indent-x4"><span class="cbi-bold">return</span>"redirect:spring/fileupload";</span></p>
        <p>}</p>
    </div>
</div>